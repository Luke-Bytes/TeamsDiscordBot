{
  "name": "discord-teams-bot",
  "private": true,
  "version": "1.0.0",
  "description": "Discord teams bot",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "build": "npx prisma generate --no-hints && esbuild src/main.ts --bundle --minify --platform=node --target=node18 --sourcemap --keep-names --outfile=dist/main.js",
    "start:bot:prod": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "dev:respawn": "node scripts/dev-runner.js",
    "prod": "npm run build && npm run start:bot:prod",
    "dev:pm2": "pm2 start src/main.ts --name 'TeamsBot' --watch --interpreter tsx",
    "prod:pm2": "pm2 start dist/main.js --name 'TeamsBot' --max-restarts 10",
    "prod:pm2:dev": "pm2 start dist/main.js --name 'TeamsBotDev' --max-restarts 10",
    "stop:pm2": "pm2 stop TeamsBot",
    "stop:pm2:dev": "pm2 stop TeamsBotDev",
    "clean": "rimraf dist",
    "lint": "npm run format && eslint .",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "check-format": "prettier --check .",
    "rollback-master": "git checkout master && git checkout -b master-rollback && git reset --hard HEAD~1",
    "logs": "node scripts/tail-logs.js",
    "backup": "node scripts/db-backups.js",
    "rebuild": "git pull && npm run stop:pm2 && npm run build && npm run prod:pm2",
    "rebuild:dev": "git pull && npm run stop:pm2:dev && npm run build && npm run prod:pm2:dev",
    "tests": "node tests/run-tests.js",
    "update-db-igns": "tsx scripts/fetch-latest-igns.ts",
    "typecheck": "tsc --noEmit",
    "check": "npm run build && npm run typecheck && npm run lint && npm run tests"
  },
  "author": "Luke",
  "license": "GNU",
  "dependencies": {
    "@eslint/js": "^9.12.0",
    "@prisma/client": "^5.20.0",
    "@types/ws": "^8.5.12",
    "chrono-node": "^2.8.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "mongodb": "^6.12.0",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.9.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "terser": "^5.37.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
