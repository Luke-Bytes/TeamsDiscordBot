generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Season {
  id        String    @id @default(uuid()) @map("_id")
  number    Int       @unique
  name      String?
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean   @default(true)

  games              Game[]
  gameParticipations GameParticipation[]
  eloHistories       EloHistory[]
  playerStats        PlayerStats[]
}

model PlayerStats {
  id       String  @id @default(uuid()) @map("_id")
  playerId String
  player   Player? @relation(fields: [playerId], references: [id])

  seasonId String
  season   Season @relation(fields: [seasonId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  elo                 Int @default(1000)
  wins                Int @default(0)
  losses              Int @default(0)
  winStreak           Int @default(0)
  loseStreak          Int @default(0)
  biggestWinStreak    Int @default(0)
  biggestLosingStreak Int @default(0)

  @@unique([playerId, seasonId])
  @@index([seasonId, elo])
}

model Player {
  id String @id @default(uuid()) @map("_id")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  discordSnowflake String @unique

  minecraftAccounts       String[]
  primaryMinecraftAccount String?
  latestIGN               String?

  eloHistories EloHistory[]
  games        GameParticipation[]
  punishments  PlayerPunishment[]
  PlayerStats  PlayerStats[]
  profile      Profile?

  @@index([latestIGN])
}

model Game {
  id       String  @id @default(uuid()) @map("_id")
  finished Boolean @default(false)

  startTime DateTime
  endTime   DateTime
  settings  GameSettings
  winner    Team
  type      gameType?
  doubleElo Boolean?

  organiser String
  host      String

  participantsIGNs String[]
  redTeamPlan Json?
  blueTeamPlan Json?

  eloHistories       EloHistory[]
  gameParticipations GameParticipation[]

  seasonId String
  season   Season @relation(fields: [seasonId], references: [id])
}

model GameParticipation {
  id String @id @default(uuid()) @map("_id")

  ignUsed String
  team    Team
  draftSlotPlacement Int?

  playerId String
  gameId   String
  player   Player @relation(fields: [playerId], references: [id])
  game     Game   @relation(fields: [gameId], references: [id])

  mvp     Boolean @default(false)
  captain Boolean @default(false)
  votedForAMVP Boolean? @default(false)

  seasonId String
  season   Season @relation(fields: [seasonId], references: [id])

  @@unique([playerId, gameId])
  @@index([gameId])
}

model EloHistory {
  id       String @id @default(uuid()) @map("_id")
  playerId String
  player   Player @relation(fields: [playerId], references: [id])

  createdAt DateTime @default(now())
  elo       Int

  gameId String
  game   Game   @relation(fields: [gameId], references: [id])

  seasonId String
  season   Season @relation(fields: [seasonId], references: [id])

  @@index([playerId, seasonId, createdAt])
}

type ModifierTypes {
  category String
  name     String
}

type BanList {
  RED  AnniClass[]
  BLUE AnniClass[]
}

type GameSettings {
  organiserBannedClasses        AnniClass[]
  sharedCaptainBannedClasses    AnniClass[]
  nonSharedCaptainBannedClasses BanList?
  map                           AnniMap
  modifiers                     ModifierTypes[]
  delayedBan                    Int @default(0)
}

model PlayerPunishment {
  id String @id @default(uuid()) @map("_id")

  playerId String
  player   Player @relation(fields: [playerId], references: [id])

  reasons          String[]
  strikeCount      Int
  punishmentDates  DateTime[]
  punishmentExpiry DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Team {
  RED
  BLUE
}

enum gameType {
  DRAFT
  SNAKE_DRAFT
  RANDOMISED
  ELO
  BALANCE
}

model Profile {
  id String @id @default(uuid()) @map("_id")

  playerId String @unique
  player   Player @relation(fields: [playerId], references: [id])

  preferredName String?
  title         String?
  unlockedTitles String[] @default([])
  pronouns      Pronouns?
  languages     Language[]
  region        Region?
  rank          PlayerRank?

  preferredRoles Role[]
  proficientAtRoles Role[]
  improveRoles   Role[]

  playstyles Playstyle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

