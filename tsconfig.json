{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/discord.js/typings"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "tests/**/*", "config.json"],
  "exclude": ["node_modules", "dist"]
}
