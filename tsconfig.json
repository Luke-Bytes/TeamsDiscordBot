{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "config.json"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
