{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "config.json",
    "node_modules/@types/**/*.ts",
    "node_modules/discord.js/typings/**/*.mts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
